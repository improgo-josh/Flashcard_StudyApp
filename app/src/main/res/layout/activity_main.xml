<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/background">


    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Who is the 44th President of the United States?"
        android:textSize="40sp"
        android:fontFamily="sans-serif-condensed"
        android:background="@drawable/card_background_question"
        android:elevation="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="5dp"
        />
    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Barack Obama"
        android:textSize="40sp"
        android:visibility="gone"
        android:background="@drawable/card_background_answer"
        android:elevation="10dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"/>

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/hide_icon"
        android:contentDescription="icon"/>

    <TextView
        android:id="@+id/choice1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="230dp"
        android:layout_centerHorizontal="true"
        android:text="Bill Clinton"
        android:textSize="30sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:background="@color/pastel_blue"
        android:textColor="@color/gray"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/choice2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/choice1"
        android:layout_centerHorizontal="true"
        android:text="George H. W. Bush"
        android:textSize="30sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginVertical="10dp"
        android:background="@color/pastel_blue"
        android:textColor="@color/gray"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginHorizontal="10dp"/>

    <TextView
        android:id="@+id/choice3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/choice2"
        android:layout_centerHorizontal="true"
        android:text="Barack Obama"
        android:textSize="30sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginVertical="10dp"
        android:background="@color/pastel_blue"
        android:textColor="@color/gray"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginHorizontal="10dp" />

</RelativeLayout>